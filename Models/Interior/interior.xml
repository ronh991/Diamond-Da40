<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanopy</object-name>
    <object-name>intporte</object-name>
    <object-name>planchet</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Diamond-Da40/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </effect>
  
  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.20 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.12 </z-m>
    </offsets>
  </model>

 <!-- Pilote -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.87440 </x-m>
      <y-m> -0.25356 </y-m>
      <z-m> -0.17176 </z-m>
    </offsets>
  </model>

  <!-- Pilote seat -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.50692 </x-m>
      <y-m> -0.26638 </y-m>
      <z-m> -0.04268 </z-m>
    </offsets>
  </model>

  <!-- Copilot seat -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.50692 </x-m>
      <y-m>  0.26638 </y-m>
      <z-m> -0.04268 </z-m>
    </offsets>
  </model>

  <!-- Rear left seat -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Seats/rearseat.xml</path>
    <offsets>
      <x-m> -0.39183 </x-m>
      <y-m> -0.24638 </y-m>
      <z-m> -0.03572 </z-m>
    </offsets>
  </model>

  <!-- Rear right seat -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Seats/rearseat.xml</path>
    <offsets>
      <x-m> -0.39183 </x-m>
      <y-m>  0.24638 </y-m>
      <z-m> -0.03572 </z-m>
    </offsets>
  </model>

  <!-- Yokes -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -2.03554 </x-m>
      <y-m> -0.26712 </y-m>
      <z-m> -0.34553 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -2.03554 </x-m>
      <y-m>  0.26712 </y-m>
      <z-m> -0.34553 </z-m>
    </offsets>
  </model>

  <!-- Pedals -->
  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.494 </x-m>
      <y-m> -0.260 </y-m>
      <z-m> -0.330 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Diamond-Da40/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.494 </x-m>
      <y-m>  0.260 </y-m>
      <z-m> -0.330 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntLaVerriere</name>
    <object-name>intcanopy</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaVerriere</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -50 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.59532 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.20731 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Porte -->
  <animation>
    <name>IntLaPorte</name>
    <object-name>intporte</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaPorte</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntLaPorte</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -65 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -1.109110 </x1-m>
      <y1-m> -0.008716 </y1-m>
      <z1-m>  0.555420 </z1-m>
      <x2-m> -0.553550 </x2-m>
      <y2-m> -0.073900 </y2-m>
      <z2-m>  0.505520 </z2-m>
    </axis>
  </animation>

</PropertyList>
